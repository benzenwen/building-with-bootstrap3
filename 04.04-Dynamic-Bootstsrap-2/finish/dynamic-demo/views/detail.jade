      ==================================================
    #maincontent.container.marketing
      //
        Jumbotron
        ==================================================
      .jumbotron.bpe-jumbotron
        h1 Product Detail
        p This is the premium product description.
      //
        Form
        ==================================================
      .row
        // Signup
        .col-md-4.col-md-offset-4
          form.form-signup(role='form')
            h2 Sign me Up!
            .form-group
              input.form-control(type='email', placeholder='Email address', required='', autofocus='')
              input.form-control(type='password', placeholder='Password', required='')
              input.form-control(type='password', placeholder='Confirm Password', required='')
            .form-group
              label(for='funding')
                | Initial funding 
                i (optional)
              .input-group
                span.input-group-addon $
                input#funding.form-control(type='text', placeholder='Initial funding')
                span.input-group-addon .00
            label.checkbox
              input(type='checkbox', value='email-me')
              |  Add me to the mailing list.
            button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign Up!
        // /Signup
      // /.row
    // .container .marketing
    //
      Panels as mini cards
      ==================================================
    hr.featurette-divider
    +broad-factoids
      +factoid('Panel header', 'factoid-primary')
        | Panels are where you can contain nuggets of content into a quick-view card.
      +factoid('List groups', 'factoid-success')
        // List group
        ul.list-group
          li.list-group-item Can hold
          li.list-group-item
            | list 
            span.badge 17
          li.list-group-item groups
      // Clean things up..
      .clearfix.visible-xs
      .factoid-box
        .factoid-panel.factoid-info
          .panel-heading Table
          table.table.table-striped
            thead
              tr
                th A
                th B
            tbody
              tr
                td and
                td tables
              tr
                td to
                td boot
              tr
                td yes
                td really
      +factoid('And pictures', 'factoid-warning')
        img.thumbnail(style='margin: auto;', src='http://placekitten.com/g/64/64')
      // Clean things up..
      .clearfix.visible-sm.visible-xs
      +factoid('Buttons', 'factoid-danger')
        button.btn.btn-lg.btn-danger.btn-block(type='submit') DANGER!
        button.btn.btn-lg.btn-warning.btn-block(type='submit') Warning!
        button.btn.btn-lg.btn-success.btn-block(type='submit') Success!
      +factoid('Button Group', 'factoid-default')
        .btn-group-vertical
          button.btn.btn-lg.btn-danger(type='submit') STOP!
          button.btn.btn-lg.btn-warning(type='submit') Warn!
          button.btn.btn-lg.btn-success(type='submit') Go!
